= form_for(@meeting) do |f|
  - if @meeting.errors.any?
    #error_explanation
      %h2
        = pluralize(@meeting.errors.count, "error")
        prohibited this meeting from being saved:
      %ul
        - @meeting.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :when
    %br/
    = f.date_select :when
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .actions
    = f.submit
